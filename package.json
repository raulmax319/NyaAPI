{
  "name": "nyaapi",
  "version": "1.0.0",
  "description": "nyaa.si api [unofficial]",
  "main": "index.js",
  "author": "Raul Max <raulmax319@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist",
    "build": "./node_modules/typescript/bin/tsc -p tsconfig.json",
    "build:paths": "npx tscpaths -p tsconfig.json -s ./src -o ./dist",
    "build:clean": "npm run clean && yarn build && yarn build:paths",
    "clean": "rm -rf dist",
    "dev": "nodemon -e ts,js --exec ts-node -r tsconfig-paths/register ./src",
    "lint": "eslint src/**",
    "lint:staged": "npx lint-staged"
  },
  "dependencies": {
    "express": "^4.18.1",
    "nyaapi-http-client": "github:raulmax319/nyaapi-http-client",
    "reflect-metadata": "^0.1.13",
    "tslog": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^13.0.2",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
